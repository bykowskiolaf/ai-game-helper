{
    "preset": "extended",
    "changelog": {
        "path": "CHANGELOG.md",
        "append": "head"
    },
    "git": {
        "remotes": {
            "origin": {
                "user": "x-access-token",
                "password": "{{#environmentVariable}}GH_TOKEN{{/environmentVariable}}"
            }
        }
    },
    "services": {
        "github": {
            "type": "GITHUB",
            "options": {
                "AUTHENTICATION_TOKEN": "{{#environmentVariable}}GH_TOKEN{{/environmentVariable}}",
                "REPOSITORY_NAME": "ai-game-helper",
                "REPOSITORY_OWNER": "bykowskiolaf"
            }
        }
    },
    "releaseTypes": {
        "publicationServices": [
            "github"
        ],
        "enabled": [
            "mainline",
            "integration"
        ],
        "items": {
            "mainline": {
                "matchBranches": "^(master|main)$",
                "collapseVersions": false,
                "gitPush": "true",
                "gitTag": "true",
                "publish": "true",
                "assets": []
            },
            "integration": {
                "matchBranches": "^dev$",
                "collapseVersions": true,
                "collapsedVersionQualifier": "rc",
                "gitPush": "true",
                "gitTag": "true",
                "publish": "true",
                "assets": []
            }
        }
    }
}